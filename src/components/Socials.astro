---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';

/** Icon links to social media â€” edit these with links to your profiles! */
const socialIconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
  { label: 'X', href: 'https://x.com/JacobJove11366', icon: 'x-logo' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/jacobjove/', icon: 'linkedin-logo' },
  { label: 'GitHub', href: 'https://github.com/jacobjove', icon: 'github-logo' },
  { label: 'YouTube', href: 'https://www.youtube.com/@JacobJove/', icon: 'youtube-logo' },
  { label: 'Substack', href: 'https://jacobjove.substack.com/', icon: 'substack-logo' },
];
---

<div class="socials">
  {
    socialIconLinks.map(({ href, icon, label }) => (
      <a href={href} class="social">
        <span class="sr-only">{label}</span>
        <Icon icon={icon} />
      </a>
    ))
  }
</div>

<style>
  .socials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    font-size: var(--icon-size);
  }

  .social {
    display: flex;
    padding: var(--icon-padding);
    text-decoration: none;
    color: var(--accent-dark);
    transition: color var(--theme-transition);
  }

  .social:hover,
  .social:focus {
    color: var(--accent-text-over);
  }

  @media (min-width: 50em) {
    .socials {
      display: none;
    }
    @media (min-width: 60em) {
      .socials {
        display: flex;
        justify-content: flex-end;
        gap: 0;
      }
    }
  }
</style>
